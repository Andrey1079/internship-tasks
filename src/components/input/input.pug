-var emailPattern = /^([a-zA-Z\-0-9_]+|([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)+)|(".+"))@(([a-zA-Z\-0-9]+\.)+[a-zA-Z\-0-9]{2,})$/;
-var textPattern = /[^]/;

mixin input(props)
	label.input(data-component='input')(for=props.id)
		if (props.type ==="textarea")
			textarea(class=`input__field input__field_type_${props.type}`)&attributes(attributes)(id=props.id,  name=props.id data-pattern=props.pattern.toString().slice(1,-1))
		else
			input.input__field&attributes(attributes)(id=props.id, type=props.type name=props.id data-pattern=props.pattern.toString().slice(1,-1))
		span.input__field-name=props.name
		+svg('valid_input').input__success-image
		p.input__error-message
	